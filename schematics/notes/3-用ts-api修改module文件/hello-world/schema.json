{
  "$schema": "http://json-schema.org/schema",
  "$id": "HelloSchematics",
  "title": "Hello Schema",
  "description": "Generate a file of JavaScript",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "Generate in specific Angular CLI workspace project",
      "$default": {
        "$source": "projectName"
      }
    },
    "name": {
      "type": "string",
      "description": "The name of the person",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    }
  },
  "required": ["name"]
}
